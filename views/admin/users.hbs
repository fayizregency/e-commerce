<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
<script src='https://kit.fontawesome.com/a076d05399.js'></script>

<div class="container-fluid">
     <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
          <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
            <h1 class="h2">Customers</h1>
            <div class="btn-toolbar mb-2 mb-md-0">
              <div class="btn-group mr-2">
                <a href="/admin/addUser"><button class="btn btn-sm btn-outline-secondary">Add User</button></a>
              </div>
            </div>
          </div>

          <div class="table-responsive">
            <table class="table table-striped table-sm" id="myTable">
              <thead>
                <tr>
                  <th>No.</th>
                  <th>First Name</th>
                  <th>Last Name</th>
                  <th>Email</th>
                  <th>Edit</th>
                  <th>Delete</th>
                </tr>
              </thead>
              <tbody>
                {{#each users}}
                <tr>
                  <td>{{@index}}</td>
                  <td>{{this.firstName}}</td>
                  <td>{{this.lastName}}</td>
                  <td>{{this.email}}</td>
                  <td><a href="/admin/editUser/{{this._id}}"><i class='far fa-edit' style='font-size:24px;color:rgb(143, 127, 127);'></i></a></td>
                  <td><a href="/admin/deleteUser/{{this._id}}" onclick="return confirm('Are you sure you want to delete {{this.productName}}?')"><i class='fas fa-trash-alt' style='font-size:24px;color:rgb(233, 103, 103) ;margin-left:10px'></i>
              </a></td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </main>
      </div>

      <!-- Icons -->
    <script src="https://unpkg.com/feather-icons/dist/feather.min.js"></script>
    <script>
      feather.replace()
    </script>