<style>
    .container {
    padding-top: 0rem;
    margin-left: 300px;
    margin-bottom: 0rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    background: #f7f1fd;
    border-radius: 25px;
    }
    form{
        width: 70%;
    }
</style>
<div class="container">
    <h3 style="align-items: center;">Add Products</h3>
    <form action="/admin/addProduct" enctype="multipart/form-data" method="POST">
        <div class="form-group">
            <label for="usr">Product Name</label>
            <input type="text" name="productName" class="form-control" id="usr" required="">
        </div>
        <div class="form-group">
            <label for="comment">Product Description</label>
            <textarea class="form-control" name="productDescription" rows="5" id="comment"></textarea>
        </div>
        <div class="form-group">
            <label for="usr">Product Price</label>
            <input type="text" name="productPrice" class="form-control" id="price" required="">
        </div>
        <div class="form-group">
            <label for="cars">Choose a category:</label>
            <select id="cars" name="category" class="form-control" required>
                <option value="men">Men's</option>
                <option value="women">Women's</option>
            </select>
        </div>
        <div class="form-group">
            <label for="usr">Product Quantity</label>
            <input type="number" name="qty" class="form-control" id="qty" required="">
        </div>
        <div class="form-group">
            <label for="usr">Product Image</label>
            <img id="imgView" height="100px" width="100px">
            <input type="file" class="form-control" name="img" id="img" onchange="viewImage(event)" accept="image/*"
                required="">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<script>
    function viewImage(event) {
        document.getElementById('imgView').src = URL.createObjectURL(event.target.files[0])
    }
</script>