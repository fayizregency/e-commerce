<style>
  body {
    background: #97cfe5;
    background: -webkit-linear-gradient(to right, #dad6d1, #dbd5e6);
    background: linear-gradient(to right, #fefeff, #b5c1d4);
    min-height: 100vh;
  }
  #invalid-coupon{
    color: gray;
    margin-top: -1rem;
    margin-left: 18px;
  }
</style>
<div class="px-4 px-lg-0">
  <div class="pb-5" style="padding-top:8rem !important">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 p-5 bg-white rounded shadow-sm mb-5">

          <!-- Shopping cart table -->
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th scope="col" class="border-0 bg-light">
                    <div class="p-2 px-3 text-uppercase">Product</div>
                  </th>
                  <th scope="col" class="border-0 bg-light">
                    <div class="py-2 text-uppercase">Price</div>
                  </th>
                  <th scope="col" class="border-0 bg-light">
                    <div class="py-2 text-uppercase">Quantity</div>
                  </th>
                  <th scope="col" class="border-0 bg-light">
                    <div class="py-2 text-uppercase">Remove</div>
                  </th>
                </tr>
              </thead>
              <tbody>
                {{#each products}}
                <tr>
                  <th scope="row" class="border-0">
                    <div class="p-2">
                      <img src="/product-images/{{this.product._id}}.jpg" alt="" width="70"
                        class="img-fluid rounded shadow-sm">
                      <div class="ml-3 d-inline-block align-middle">
                        <h5 class="mb-0"> <a href="#"
                            class="text-dark d-inline-block align-middle">{{this.product.product}}</a></h5><span
                          class="text-muted font-weight-normal font-italic d-block">Category:
                          {{this.product.category}}</span>
                      </div>
                    </div>
                  </th>
                  <td class="border-0 align-middle"><strong>Rs. {{this.product.price}}</strong></td>
                  <td class="pt-5">
                    <div class="def-number-input number-input safari_only mb-0">
                      <button onclick="changeQty('{{this._id}}','{{this.product._id}}','{{../user._id}}',-1)"
                        class="minus" id="minus-btn-{{this.product._id}}">-</button>
                      <input readonly min="1" id="qty-{{this.product._id}}" value="{{this.quantity}}" type="number"
                        style="width:13%">
                      <button onclick="changeQty('{{this._id}}','{{this.product._id}}','{{../user._id}}',1)"
                        class="plus">+</button>
                    </div>
                  </td>
                  <td class="border-0 align-middle"><i style="cursor: pointer;"
                      onclick="removeCart('{{this._id}}','{{this.product._id}}')" class="fa fa-trash"></i></td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
          <!-- End -->
        </div>
      </div>

      <div class="row py-5 p-4 bg-white rounded shadow-sm">
