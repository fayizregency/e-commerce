<section class="mb-5 container" style="margin-top: 10rem;background-color: #f1f5f9;">

  <div class="row">
    <div class="col-md-6 mb-4 mb-md-0">

      <div id="mdb-lightbox-ui"></div>

      <div class="mdb-lightbox">

        <div class="row product-gallery mx-1">

          <div class="col-12 mb-0">
            <figure class="view overlay rounded z-depth-1 main-img" style="margin: 15px 19px 1rem;">
              <a href=""
                data-size="710x823">
                <img src="/product-images/{{product._id}}.jpg"
                  class="img-fluid z-depth-1 demo-trigger" height="240px" width="240px" data-zoom="/product-images/{{product._id}}.jpg">
              </a>
            </figure>
          </div>
          
        </div>

      </div>

    </div>
    <div class="col-md-6 detail">
    <hr>
      <h5>{{product.product}}</h5>
      <p class="mb-2 text-muted text-uppercase small">watch</p>
      <p><span class="mr-1"><strong>Rs. {{product.price}}</strong></span></p>
      <p class="pt-1">{{product.description}}</p>
